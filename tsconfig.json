{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./src/app/*"],
      "@/*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": true
  }
}